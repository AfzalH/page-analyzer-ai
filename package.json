{
  "name": "page-analyzer-ai",
  "version": "1.0.1",
  "description": "Chrome extension that analyzes web pages for typos, grammar, and improvements using LLM APIs",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "zip": "npm run build && node scripts/zip.cjs",
    "icons": "node scripts/generate-icons.cjs",
    "package": "npm run icons && npm run zip"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.36",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
